{
  "name": "kaisen-os-backend",
  "version": "1.0.0",
  "description": "Backend of the Kaisen OS Application",
  "main": "src/server.ts",
  "scripts": {
    "prestart": "npm run build && npm run build --prefix client",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc -p .",
    "client": "npm start --prefix client",
    "dev-full": "concurrently \"npm run dev\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install && npm install --prefix client && npm run build --prefix client"
  },
  "author": "Bihan & Ankur",
  "license": "ISC",
  "dependencies": {
    "async": "^3.2.0",
    "axios": "^0.21.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.5.0",
    "mongoose": "^5.11.18",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemon": "^2.0.7",
    "sharp": "^0.28.2",
    "uuidv4": "^6.2.8"
  },
  "devDependencies": {
    "@types/async": "^3.2.5",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.31",
    "@types/sharp": "^0.28.1",
    "concurrently": "^6.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
